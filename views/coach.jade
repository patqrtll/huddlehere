extends layout

block content
  script(type='text/javascript').
    var objMeeting = !{JSON.stringify(meeting)}
  .row.page-header: .col-lg-12
    h1 HuddleHere
      br
      small Meeting Schedule Coach
  .row
    .col-md-8
      .panel.panel-primary
        .panel-heading
          h2.panel-title Format: #{meeting.format}
        .panel-body
          p Facilitator: #{meeting.leader}
          p Recorder: #{meeting.members[0]}
          h2 Objective: Improve the wheel
          .panel.panel-default
            .panel-heading
              h2.panel-title Starting Point
            .panel-body
              em If it ain't broke, don't fix it
    .col-md-4
      .panel.panel-primary
        .panel-heading
          h2.panel-title Location
        .panel-body
          img.img-responsive.img-rounded(src="http://maps.googleapis.com/maps/api/staticmap?center=#{meeting.location[0]},#{meeting.location[1]}&zoom=17&size=350x350&sensor=false&markers=42.653224,-71.325584&scale=2")
          address#meetingLocation
            strong#streetAddress
            br
            span#cityState
            br
      .panel.panel-primary
        .panel-heading
          h2.panel-title Timing
        .panel-body
          strong Scheduled Start:
          br 
          p#meetingStart
          br
          strong Scheduled End:
          br
          p#meetingEnd
  script(src='/javascripts/coachTimes.js')
  script(src='/javascripts/coachLoc.js')
  script(src='/javascripts/geo.js')
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyC-vUxYe3poWbJS5fqIDwRf2c0CNk4kXwo&callback=geoInitialize')
  script(src='/javascripts/coachLoc.js')

  